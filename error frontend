<body>
  <div class="container">
    <div class="menu-title">Error Resolution Center</div>
    <div class="subtitle">
      Please enter the error code to view its description, causes, and solutions.
    </div>

    <!-- INPUT -->
    <div class="search-box">
      <input
        id="errorInput"
        placeholder="Enter Error Code (e.g. ERR001)"
        onkeydown="if(event.key==='Enter') searchError()"
      />
      <button onclick="searchError()">Search</button>
    </div>

    <!-- RESULT -->
    <div id="result" class="result hidden"></div>
  </div>

<script>
const resultDiv = document.getElementById("result");

async function searchError() {
  const code = document.getElementById("errorInput").value.trim();
  if (!code) return;

  resultDiv.classList.add("hidden");
  resultDiv.innerHTML = "";

  try {
    const res = await fetch("/api/chat", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ message: code })
    });

    const data = await res.json();

    if (data.type === "no_match") {
      resultDiv.innerHTML = `<div class="error">No matching error found.</div>`;
      resultDiv.classList.remove("hidden");
      return;
    }

    resultDiv.innerHTML = `
      <div class="card">
        ${data.response}
      </div>
    `;
    resultDiv.classList.remove("hidden");

  } catch (err) {
    resultDiv.innerHTML = `<div class="error">Server error. Please try again.</div>`;
    resultDiv.classList.remove("hidden");
  }
}
</script>

</body>
